@page "/importar-notas"

@using Microsoft.AspNetCore.Components.Forms

<div class="page-wrapper">
    <div class="card">
        <div class="icon">ðŸ“„</div>
        <h2>Sistema de Notas</h2>
        <p>Importe sua planilha de notas para visualizar os dados dos alunos</p>

        <InputFile OnChange="HandleFileSelected" accept=".xlsx,.xls,.csv" class="file-input" />
        <button class="btn" @onclick="TriggerFileUpload"> Importar Planilha</button>

        <p class="formats">Formatos suportados: .xlsx, .xls, .csv</p>
    </div>
</div>

@code {
    private IBrowserFile? selectedFile;

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
    }

    private async Task TriggerFileUpload()
    {
        if (selectedFile is not null)
        {
            try
            {
                var content = new MultipartFormDataContent();
                var fileContent = new StreamContent(selectedFile.OpenReadStream());
                content.Add(content: fileContent, name: "file", fileName: selectedFile.Name);

                // var httpClient = new HttpClient();
