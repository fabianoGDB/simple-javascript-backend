@page "/"

<PageTitle>Importar Planilhas</PageTitle>

@using System.IO
@using Services
@using Microsoft.AspNetCore.Components.Forms
@inject FileService fileService


<div class="page-wrapper">
    <div class="card">
        <form @onsubmit="OnSubmit">
            <div class="icon">📄</div>
            <h2>Sistema de Notas</h2>
            <p>Importe sua planilha de notas para visualizar os dados dos alunos</p>
            <InputFile OnChange="OnInputFileChange" accept=".xlsx" class="file-input" />
            <p class="formats">Formatos suportados: .xlsx, .xls, .csv</p>
            <button class="btn" type="submit"> Importar Planilha</button>
        </form>
    </div>
</div>

@code {
    string Message = "Importe sua planilha de notas para visualizar os dados dos alunos";
    IBrowserFile? selectedFile;

    void OnInputFileChange(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        Message = $"Arquivo selecionado: {selectedFile.Name} ({selectedFile.Size / 1024} KB)";
        StateHasChanged();
    }

    async Task OnSubmit(){
        if (selectedFile is null){
            return;
        }
        var response = await fileService.UploadFile(selectedFile);
        StateHasChanged();
    }
}

